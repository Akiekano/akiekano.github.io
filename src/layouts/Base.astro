---
title: "Base Layout"
description: "A base layout for blog posts."
---

import { Fragment } from "astro:jsx";

interface Props {
    meta: {
        title: string;
        description: string;
        articleDate: string;
        ogImage: string;
    };
}

const { meta } = Astro.props;
const { title, description, articleDate, ogImage } = meta;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:image" content={ogImage} />
    <link rel="stylesheet" href="/styles.css" />
</head>
<body>
    <header>
        <h1>{title}</h1>
        <p>{articleDate}</p>
    </header>
    <main>
        <Fragment>
            <slot />
        </Fragment>
    </main>
    <footer>
        <p>&copy; {new Date().getFullYear()} Your Name</p>
    </footer>
</body>
</html>
